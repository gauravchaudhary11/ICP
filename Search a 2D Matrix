class Solution {
    public boolean searchMatrix(int[][] matrix, int target) {
        int m=matrix.length;
        int n=matrix[0].length;
        int left=0;
        int right=m*n-1;
        while(left<=right){
            int mid=left+(right-left)/2;
            // to find row ->mid divided by column
            int row=mid/n;
            // to find column -> mid % by column;
             int column=mid%n;
             int midElement=matrix[row][column];
             if(target==midElement){
                return true;
            }
            else if(target<midElement){
                right=mid-1;
            }
            else{
                left=mid+1;
            }
        }
        return false;
    }
}
