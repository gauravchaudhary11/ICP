class Solution {
    public int rob(int[] arr) {
        int n=arr.length;
        int ans[]=new int[n];
        if(n==1){
            return arr[0];
        }
        ans[0]=arr[0];
        ans[1]=Math.max(arr[0],arr[1]);
        for(int i=2;i<n;i++){
            ans[i]=Math.max(ans[i-2]+arr[i],ans[i-1]);
        }
        return ans[n-1];

    }
}
