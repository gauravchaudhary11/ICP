class Solution {
    public boolean isPerfectSquare(int num) {
        if(num==0 || num==1){
            return true;
        }  
        if(num>9){
            for(int i=2;i<=num/4;i++){
                if(i*i==num){
                    return true;
                }
            }
        }
        else{
            for(int i=2;i<=num/2;i++){
                if(i*i==num){
                    return true;
                }
            }
        }
        return false;

    }
}
