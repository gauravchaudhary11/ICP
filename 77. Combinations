class Solution {
    public List<List<Integer>> combine(int n, int k) {
        List<List<Integer>>ans=new ArrayList<>();
        helper(n,k,new ArrayList<>(),ans);
        return ans;
    }
    public void helper(int n,int k,ArrayList<Integer>list,List<List<Integer>>ans){
        if(k==0){
            ans.add(new ArrayList<>(list));
            return;
        }
        if(n==0){
            return;
        }
        //pick
        list.add(n);
        helper(n-1,k-1,list,ans);
        //not pick
        list.remove(list.size()-1);
        helper(n-1,k,list,ans);

    }
}
