class Solution {
    public int characterReplacement(String s, int k) {
        int freq[]=new int[26];
        int max=0;
        int maxFreq=0;
        int left=0;
        for(int right=0;right<s.length();right++){
            int r=s.charAt(right)-'A';
            freq[r]++;
            if(freq[r]>maxFreq){
                maxFreq=freq[r];
            }
            while((right-left+1)-maxFreq>k){
                int l=s.charAt(left)-'A';
                freq[l]--;
                left++;
            }
            max=Math.max(max,right-left+1);

        }
        return max;

    }
}
